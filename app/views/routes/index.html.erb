<%= form_with(url: routes_path, method: :get, local: true) do |form| %>
  <%= form.text_field :search, placeholder: "Search routes..." %>
  <%= form.select :coverage, options_for_select([
    ['Rapid Transit', 'rapid transit'],
    ['Feeder', 'feeder'],
    ['Regular', 'regular'],
    ['Express', 'express']
  ], selected: params[:coverage]), include_blank: 'Select Coverage' %>
  <%= form.submit "Search" %>
<% end %>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Route Number</th>
      <th>Coverage</th>
      <th>customerType</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.number %></td>
        <td><%= route.coverage %></td>
        <td><%= route.customer_type %></td>
        <td><%= link_to "View", route_show_path(route.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @routes %>
