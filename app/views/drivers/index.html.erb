<div class="mt-4 flex justify-center">
  <%= form_with(url: drivers_path, method: :get, local: true, class: "mb-6") do |form| %>
    <div class="flex space-x-2">
      <%= form.text_field :name, placeholder: "Input name...", class: "px-4 py-2 border rounded shadow-sm" %>
      <%= form.text_field :email, placeholder: "Input email...", class: "px-4 py-2 border rounded shadow-sm" %>
      <%= form.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>

<h1 class="text-2xl font-bold mb-4">Drivers</h1>

<table class="table-auto w-full mb-4">
  <thead class="bg-gray-200">
    <tr>
      <th class="px-4 py-2">First Name</th>
      <th class="px-4 py-2">Last Name</th>
      <th class="px-4 py-2">Email Type</th>
      <th class="px-4 py-2">Phone Number</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @drivers.each do |driver| %>
      <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
        <td class="border px-4 py-2"><%= driver.first_name %></td>
        <td class="border px-4 py-2"><%= driver.last_name %></td>
        <td class="border px-4 py-2"><%= driver.email %></td>
        <td class="border px-4 py-2"><%= driver.phone_number %></td>
        <td class="border px-4 py-2"><%= link_to "View", driver_show_path(driver.id), class: "text-blue-500 hover:text-blue-800" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4 mr-8 flex justify-end">
  <%= paginate @drivers, class: "kaminari_tailwind" %>
</div>
