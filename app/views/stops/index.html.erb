<div class="mt-4 flex justify-center">
  <%= form_with(url: stops_path, method: :get, local: true, class: "mb-6") do |form| %>
    <div class="flex space-x-2">
      <%= form.text_field :key, placeholder: "Input stop key...", class: "px-4 py-2 border rounded shadow-sm" %>
      <%= form.text_field :name, placeholder: "Input stop name...", class: "px-4 py-2 border rounded shadow-sm" %>
      <%= form.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>

<h1 class="text-2xl font-bold mb-4">Stops</h1>

<table class="table-auto w-full mb-4">
  <thead class="bg-gray-200">
    <tr>
      <th class="px-4 py-2">Stop Key</th>
      <th class="px-4 py-2">Name</th>
      <th class="px-4 py-2">Street</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stops.each do |stop| %>
      <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
        <td class="border px-4 py-2"><%= stop.key %></td>
        <td class="border px-4 py-2"><%= stop.name %></td>
        <td class="border px-4 py-2"><%= stop.street %></td>
        <td class="border px-4 py-2"><%= link_to "View", stop_show_path(stop.id), class: "text-blue-500 hover:text-blue-800" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4 mr-8 flex justify-end">
  <%= paginate @stops, class: "kaminari_tailwind" %>
</div>
